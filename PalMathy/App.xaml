<Application x:Class="PalMathy.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PalMathy" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="MainWindow.xaml">
    <Application.Resources>       
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="Indigo" SecondaryColor="LightBlue" />                
                
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />                                 
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="PopupBox" TargetType="Grid">
                <Setter Property="Margin" Value="15" ></Setter>
            </Style>
            <Style x:Key="PopupText" TargetType="TextBlock">
                <Setter Property="MaxWidth" Value="300" ></Setter>
                <Setter Property="TextWrapping" Value="Wrap"></Setter>
            </Style>            
            
            <Color x:Key="CancelColor">#e57373</Color>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
