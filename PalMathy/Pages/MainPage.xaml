<Page x:Class="PalMathy.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PalMathy.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Style="{StaticResource MaterialDesignHeadline2TextBlock}"
                Text="Привет! Я Палмафи" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Image Source="/Materials/palmathy-char.png" Stretch="Fill" HorizontalAlignment="Center" Height="220" Width="261"/>
        <TextBlock Text="И я помогу тебе со всеми задачками, с которыми ты столкнешься при изучении математики. 
Просто разверни боковое меню, чтобы мы могли начать!" FontSize="18" TextAlignment="Center" TextWrapping="Wrap" Width="516"/>
    </StackPanel>
</Page>
